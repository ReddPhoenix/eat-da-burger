<div id="columns" class="tile is-ancestor">

    {{!-- Burgers to be devoured --}}
    <div class="tile is-parent is-vertical is-5">
        <article id="book-result" class="tile is-child notification is-primary is-bold is-dark headline has-text-centered">
            <h2>Burgers to be Devoured</h2>
            
            {{#each burgers}}
            {{#unless devoured}}
            <form action="burger/eat/{{id}}" method="POST">
                <div class="input-group">
                    <li class="form-control burger">{{burger_name}}</li>
                    <br>
                    <span class="input-group-btn level-left" >
                        <button class="btn-default" id="search-btn" type="submit">Devour Burger!</button>
                    </span>
                </div>
            </form>
            {{/unless}}
            {{/each}}
           
        </article>
    </div>
    
    {{!-- Burgers devoured --}}
    <div class="tile is-parent is-vertical is-5">
        <article id="book-result" class="tile is-child notification is-secondary is-bold is-dark headline has-text-centered">
            <h2>Burgers Devoured</h2>

            {{#each burgers}}
            {{#if this.devoured}}
            <form action="burger/eat/{{id}}" method="POST">
                <div class="input-group">
                    <li class="form-control">{{this.burger_name}}</li>
                </div>
            </form>
            {{/if}}
            {{/each}}
        </article>
    </div>


</div>

